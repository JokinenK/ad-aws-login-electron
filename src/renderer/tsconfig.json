{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es2018",
      "DOM"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": false,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "../../build",
    "paths": {
      "@common/*": ["../common/*"],
      "@renderer/*": ["./*"],
      "@buildroot/*": ["../../*"],
    },
  },
  "exclude": [
    "node_modules",
    "src/main/"
  ]
}
